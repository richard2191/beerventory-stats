<% content_for :title do %>My beerventory dashboard<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-view="Clock"></div>
      <i class="icon-time icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="beername" data-view="Comments" style="background-color:#32cd32;" data-moreinfo="Most Popular Beer"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="beerlist" data-view="List" data-unordered="true" data-title="Beers in Inventory" data-moreinfo="Drink Responsibly"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="lastbeer" data-view="Comments" style="background-color:#b1a1c6;" data-moreinfo="Last Checked Out Beer"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="beerstats" data-view="Graph" data-title="Number of beers drank" data-moreinfo="in near real time" style="background-color:#ff9618"></div>
    </li>
  </ul>
  <center><div style="font-size: 12px">Hello SendGrid!</div></center>
</div>